= simple_form_for @question, :html => { class: 'form-horizontal', novalidate: false} do |f| 
  .form-group
    = f.input :text, as: :text, label: false, placeholder: "#{t(:tell_us_how_we_can_help_you)}", :input_html => {class: "form-control", required: true}
  .form-group
    = f.input :answer, as: :text, label: false, placeholder: "#{t(:tell_us_how_we_can_help_you)}", :input_html => {class: "form-control", required: true}
  .form-group
    = f.button :submit, "#{t(:send_message)}", class: "btn-default"